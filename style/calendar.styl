@import "../../../theme/__init.styl"
@import "../../../style/__vendor.styl"

[data-molecule-div=calendar]
  position: relative
  text-align: center
  width: inherit

  > [data-atom-heading]
    > *
      padding-right: (FONT_SIZE_TINY / 4)
      font-size: FONT_SIZE_TINY
      font-weight: FONT_WEIGHT_THIN
      font-style: italic
      opacity: 0.5

  > [data-atom-day]
    position: relative
    display: inline-block
    width: 14.25%
    font-size: FONT_SIZE_SMALL
    line-height: (1.75 * FONT_SIZE_SMALL)
    font-weight: FONT_WEIGHT_NORMAL
    cursor: pointer

    &:nth-child(-n+8)
      font-weight: FONT_WEIGHT_BOLD
      font-size: SIZE = (FONT_SIZE_TINY / 1.1)
      line-height: SIZE
      opacity: 0.5

    &.disabled
      font-weight: FONT_WEIGHT_THIN
      background-color: rgba(0,0,0,0.1)
      opacity: 0.3

    &:nth-child(n+9)
      &:active
        background-color: rgba(0,0,0,0.15)
        font-weight: FONT_WEIGHT_BOLD

    &.today
      font-weight: FONT_WEIGHT_BOLD

    &.event
      font-weight: FONT_WEIGHT_BOLD
      &:after
        content: "Â·"
        position: absolute
        left: 0px
        top: 65%
        width: 100%
        height: HEIGHT = (FONT_SIZE_SMALL / 2)
        font-size: (2.5 * FONT_SIZE_BIG)
        font-weight: FONT_WEIGHT_THIN
        line-height: HEIGHT
        opacity: 0.5

    &.active
      background-color: rgba(0,0,0,0.4)
      color: WHITE
      font-weight: FONT_WEIGHT_BOLD

@media screen and (min-width: 1024px)
  [data-molecule-div=calendar]
    > [data-atom-day]
      &:nth-child(n+9)
        &:hover
          background-color: rgba(0,0,0,0.15)
          font-weight: FONT_WEIGHT_BOLD
