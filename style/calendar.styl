@import "../../../theme/__init.styl"
@import "../../../style/__vendor.styl"

[data-molecule-div=calendar]
  position: relative
  display: table
  // display-flex()
  // justify-content center
  // align-content center
  // align-items center
  &.full
    position: absolute !important
    width: 100% !important
    height: 100% !important
  &:not(.full)
    height: 12rem

  text-align: center
  > [data-atom-day]
    position: relative
    display: inline-block
    width: 14.25%
    font-size: FONT_SIZE_SMALL
    font-weight: FONT_WEIGHT_NORMAL
    line-height: 1.75rem


    &:hover, &:active
      background-color: blue

    &:nth-child(7n+6), &:nth-child(7n+7)
      opacity: 0.6

    &:nth-child(-n+7)
      font-size: FONT_SIZE_TINY

    &.disabled, &:nth-child(-n+7)
      font-weight: FONT_WEIGHT_THIN
      opacity: 0.3

    &.today
      font-weight: FONT_WEIGHT_BOLD
      color: red

    &.event
      // background-color: #eee
      font-weight: FONT_WEIGHT_BOLD
      &:after
        content: "Â·"
        position: absolute
        left: 0px
        top: 62.5%
        width: 100%
        height: HEIGHT = (FONT_SIZE_SMALL / 2)
        font-size: (2.5 * FONT_SIZE_BIG)
        font-weight: FONT_WEIGHT_THIN
        line-height: HEIGHT
        opacity: 0.6

    &.active
      background-color: #ccc
      color: #fff
      font-weight: FONT_WEIGHT_BOLD
